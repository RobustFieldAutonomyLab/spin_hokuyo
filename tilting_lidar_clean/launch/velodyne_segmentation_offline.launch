<node
   pkg="tilting_lidar_clean"
   type="hokuyo_filter"
   name="hokuyo_filter"
   output="screen"
/>



  <node
    pkg="rviz"
    type="rviz"
    name="rviz"
    args="-d $(find tilting_lidar_clean)/rviz_cfg/removed_floor.rviz"/>
   />

  <node pkg="tf" type="static_transform_publisher" name="servo_to_velodyne"
            args="0.35 0 -0.13 0 0 -0.052 /velodyne /servo 10" />


  <node
    pkg="scan_to_pcl"
    type="scan_to_pcl"
    name="scan_to_pcl"
   />


  
    <node 
        name="relay_hokuyo" pkg="topic_tools" type="relay"
        args="/hokuyo_points /hokuyo_velodyne_combined_cloud"
    />

    <node 
        name="relay_velodyne" pkg="topic_tools" type="relay"
        args="/velodyne_points /hokuyo_velodyne_combined_cloud"
    />

    <param name="assembled_cloud_mode" type="string" value="time" />
    <param name="scan_time" type="int" value="10" />
    <arg name="assemble" default="velodyne_points"/> 

  <node type="point_cloud2_assembler" pkg="laser_assembler" name="my_assembler">
    <remap from="cloud" to="$(arg assemble)"/>
    <param name="max_clouds" type="int" value="10000" />
    <param name="fixed_frame" type="string" value="map" />
  </node>


   <node
     pkg="tilting_lidar_clean"
     type="combine_clouds"
     name="combine_clouds"
     output="screen"
    />
 
    <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
         <param name="resolution" value="0.3" />
         <param name="frame_id" type="string" value="map" />
         <param name="sensor_model/max_range" value="300.0" />
         <remap from="cloud_in" to="/voxel_grid/output" />
    </node>

    <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

    <node pkg="nodelet" type="nodelet" name="voxel_grid" args="load pcl/VoxelGrid pcl_manager" output="screen">
      <remap from="~input" to="/assembled_cloud" />
      <rosparam>
        filter_field_name: z
        filter_limit_min: -10000
        filter_limit_max: 10000
        filter_limit_negative: False
        leaf_size: 1
      </rosparam>
    </node>

    <node pkg="tilting_lidar_clean" type="hokuyo_ground_filter" name="hokuyo_ground_filter"/>

    <node pkg="plane_extract_ransac" type="plane_extract_ransac" name="plane_extract_ransac">
    	<remap from="assembled_cloud" to="/voxel_grid/output" />
    </node>

    <node pkg="tilting_lidar_clean" type="pcl_Conversion" name="pcl_Conversion">
    	<remap from="assembled_cloud" to="/planes_pointcloud"/>
    </node>

    <arg name="path"/>
    <arg name="speed" default="1"/>
<!--    <arg name="other" default=""/>
    <arg name="topics" default=""/> -->
    <node pkg="rosbag" type="play" name="player" output="screen" args="$(arg path) -r $(arg speed) --topics /tf /velodyne_points /scan --clock" />


</launch>
